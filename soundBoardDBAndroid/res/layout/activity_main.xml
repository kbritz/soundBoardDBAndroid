<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgrnd"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/splash"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/splash"
        android:orientation="vertical"
        android:visibility="gone" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/compani"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/g1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/buttons_margin"
            android:background="@drawable/image_selector_goku" />

        <ImageButton
            android:id="@+id/v1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/buttons_margin"
            android:layout_marginRight="@dimen/buttons_margin"
            android:background="@drawable/image_selector_maldade" />

        <ImageButton
            android:id="@+id/m1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/buttons_margin"
            android:background="@drawable/image_selector_comer" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layouts_margin"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/c1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/buttons_margin"
            android:background="@drawable/image_selector_maldicao" />

        <ImageButton
            android:id="@+id/v2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/buttons_margin"
            android:layout_marginRight="@dimen/buttons_margin"
            android:background="@drawable/image_selector_oito_mil" />

        <ImageButton
            android:id="@+id/g2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/buttons_margin"
            android:background="@drawable/image_selector_kamehameha" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layouts_margin"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/v3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/buttons_margin"
            android:background="@drawable/image_selector_verme_maldito" />

        <ImageButton
            android:id="@+id/v4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/buttons_margin"
            android:layout_marginRight="@dimen/buttons_margin"
            android:background="@drawable/image_selector_cafe" />

        <ImageButton
            android:id="@+id/v5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/buttons_margin"
            android:background="@drawable/image_selector_verme_verde" />
    </LinearLayout>

</LinearLayout>